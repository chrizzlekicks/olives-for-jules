---
import chris from '../assets/chris.jpeg';
import franz from '../assets/franzmann.jpeg';
import rio from '../assets/rio.jpeg';
---

<div
	class="my-4 p-4 lg:h-fit container flex flex-col items-center gap-8 sm:grid sm:grid-cols-3 sm:place-items-center mx-auto max-w-screen-lg"
>
	<div
		class="w-full aspect-square m-4 relative flex justify-center border rounded-full overflow-hidden -translate-x-full transition-all duration-300"
	>
		<span
			class="w-full h-full grid place-items-center absolute z-10 opacity-0 transition-opacity hover:opacity-100 hover:bg-black/[0.6]"
		>
			<p class="font-bold text-white text-lg sm:text-[1.625rem]">Chris</p>
		</span>
		<img src={chris} class="absolute z-0" />
	</div>
	<div
		class="w-full aspect-square m-4 relative flex justify-center border rounded-full overflow-hidden -translate-x-full transition-all duration-500"
	>
		<span
			class="w-full h-full grid place-items-center absolute z-10 opacity-0 transition-opacity hover:opacity-100 hover:bg-black/[0.6]"
		>
			<p class="font-bold text-white text-lg sm:text-[1.625rem]">Franz</p>
		</span>
		<img src={franz} class="absolute z-0" />
	</div>
	<div
		class="w-full aspect-square m-4 relative flex justify-center border rounded-full overflow-hidden -translate-x-full transition-all duration-700"
	>
		<span
			class="w-full h-full grid place-items-center absolute z-10 opacity-0 transition-opacity hover:opacity-100 hover:bg-black/[0.6]"
		>
			<p class="font-bold text-white text-lg sm:text-[1.625rem]">Rio</p>
		</span>
		<img src={rio} class="absolute z-0" />
	</div>
</div>
<script>
	const observer = new IntersectionObserver((entries) => {
		entries.forEach((entry) => {
			if (entry.isIntersecting) {
				entry.target.classList.add('translate-x-0');
			}
		});
	});
	const memEls = document.querySelectorAll('.relative');
	memEls.forEach((el) => observer.observe(el));
</script>
